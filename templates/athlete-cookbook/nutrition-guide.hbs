<!DOCTYPE html>
<html>

<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;600;700;800&display=swap" rel="stylesheet">
  <style>
    @page {
      size: A4;
      margin: 15mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
      line-height: 1.5;
      margin: 0;
    }

    .header {
      text-align: center;
      margin-bottom: 15px;
      padding-bottom: 10px;
      border-bottom: 3px solid {{customization.primaryColor}};
    }

    .header .icon {
      font-size: 28px;
      margin-bottom: 5px;
    }

    .title {
      font-size: 26px;
      color: {{customization.primaryColor}};
      margin: 0;
    }

    .subtitle {
      font-size: 12px;
      color: #666;
      margin-top: 4px;
    }

    /* Macros section */
    .macros-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 12px;
      margin-bottom: 15px;
    }

    .macro-card {
      padding: 12px;
      border-radius: 12px;
      text-align: center;
    }

    .macro-card.carbs {
      background: linear-gradient(135deg, #FFF8E1 0%, #FFECB3 100%);
      border: 2px solid #FFC107;
    }

    .macro-card.protein {
      background: linear-gradient(135deg, #FFEBEE 0%, #FFCDD2 100%);
      border: 2px solid #E91E63;
    }

    .macro-card.fats {
      background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
      border: 2px solid #4CAF50;
    }

    .macro-icon {
      font-size: 28px;
      margin-bottom: 4px;
    }

    .macro-name {
      font-size: 14px;
      font-weight: 700;
      margin-bottom: 2px;
    }

    .macro-role {
      font-size: 10px;
      font-weight: 600;
      color: #666;
      margin-bottom: 6px;
    }

    .macro-sources {
      font-size: 10px;
      color: #555;
      line-height: 1.4;
    }

    /* Plate visual */
    .plate-section {
      display: flex;
      gap: 20px;
      margin-bottom: 15px;
      align-items: center;
    }

    .plate-visual {
      width: 130px;
      height: 130px;
      border-radius: 50%;
      border: 4px solid {{customization.primaryColor}};
      position: relative;
      flex-shrink: 0;
      overflow: hidden;
    }

    .plate-carbs {
      position: absolute;
      top: 0;
      left: 0;
      width: 50%;
      height: 100%;
      background: #FFF8E1;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .plate-protein {
      position: absolute;
      top: 0;
      right: 0;
      width: 50%;
      height: 50%;
      background: #FFEBEE;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .plate-veggies {
      position: absolute;
      bottom: 0;
      right: 0;
      width: 50%;
      height: 50%;
      background: #E8F5E9;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .plate-section-icon {
      font-size: 22px;
    }

    .plate-legend {
      flex: 1;
    }

    .legend-title {
      font-size: 15px;
      font-weight: 700;
      color: {{customization.primaryColor}};
      margin-bottom: 10px;
    }

    .legend-item {
      display: flex;
      align-items: center;
      gap: 8px;
      margin-bottom: 8px;
      font-size: 11px;
    }

    .legend-color {
      width: 16px;
      height: 16px;
      border-radius: 4px;
    }

    /* Hydration */
    .hydration-section {
      background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
      padding: 12px;
      border-radius: 12px;
      margin-bottom: 15px;
    }

    .hydration-header {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 10px;
    }

    .hydration-icon {
      font-size: 24px;
    }

    .hydration-title {
      font-size: 14px;
      font-weight: 700;
      color: #1565C0;
    }

    .hydration-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 8px;
    }

    .hydration-item {
      background: white;
      padding: 8px;
      border-radius: 8px;
      text-align: center;
    }

    .hydration-when {
      font-size: 10px;
      font-weight: 700;
      color: #1565C0;
      margin-bottom: 2px;
    }

    .hydration-amount {
      font-size: 9px;
      color: #555;
    }

    /* Recovery foods */
    .recovery-section h3 {
      font-size: 14px;
      color: {{customization.primaryColor}};
      margin: 0 0 10px 0;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .recovery-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 10px;
    }

    .recovery-item {
      background: #FAFAFA;
      padding: 10px 8px;
      border-radius: 10px;
      text-align: center;
    }

    .recovery-item-icon {
      font-size: 26px;
      margin-bottom: 4px;
    }

    .recovery-item-name {
      font-size: 10px;
      font-weight: 600;
      color: #333;
      margin-bottom: 2px;
    }

    .recovery-item-benefit {
      font-size: 9px;
      color: #666;
    }

    /* Bottom tip */
    .bottom-tip {
      background: linear-gradient(135deg, {{customization.primaryColor}} 0%, {{customization.secondaryColor}} 100%);
      padding: 14px 20px;
      border-radius: 12px;
      margin-top: 15px;
      color: white;
      text-align: center;
    }

    .bottom-tip p {
      font-size: 12px;
      margin: 0;
    }

    .bottom-tip strong {
      font-size: 14px;
    }
  </style>
</head>

