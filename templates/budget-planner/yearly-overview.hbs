<!-- templates/budget-planner/yearly-overview.hbs -->
<!DOCTYPE html>
<html lang="{{lang}}">

<head>
  <style>
    @page {
      size: A4 landscape;
      margin: 12mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
      font-size: 10px;
    }

    .header {
      text-align: center;
      margin-bottom: 12px;
    }

    .title {
      font-size: 24px;
      color: {{customization.primaryColor}};
      margin: 0;
    }

    .year-grid {
      display: grid;
      grid-template-columns: repeat(6, 1fr);
      gap: 8px;
    }

    .month-box {
      border: 2px solid {{customization.primaryColor}};
      border-radius: 6px;
      padding: 8px;
      background: white;
    }

    .month-name {
      font-size: 11px;
      font-weight: bold;
      color: white;
      background: {{customization.primaryColor}};
      margin: -8px -8px 8px -8px;
      padding: 5px;
      text-align: center;
      border-radius: 4px 4px 0 0;
    }

    .metric {
      display: flex;
      justify-content: space-between;
      margin: 4px 0;
      font-size: 9px;
    }

    .metric-label { color: #666; }

    .metric-value {
      font-weight: bold;
      min-width: 40px;
      text-align: right;
    }

    .divider {
      border-top: 1px solid #e0e0e0;
      margin: 5px 0;
    }

    .metric.savings .metric-label { color: #4caf50; }
    .metric.debt .metric-label { color: #e91e63; }

    .bottom-section {
      margin-top: 15px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 15px;
    }

    .summary-box {
      background: linear-gradient(135deg, {{customization.primaryColor}}10, {{customization.secondaryColor}}10);
      border: 2px solid {{customization.primaryColor}};
      border-radius: 10px;
      padding: 12px;
    }

    .summary-title {
      font-size: 12px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 10px;
      text-align: center;
    }

    .summary-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 8px;
    }

    .summary-item {
      background: white;
      padding: 8px;
      border-radius: 6px;
      text-align: center;
    }

    .summary-label {
      font-size: 8px;
      color: #666;
      margin-bottom: 3px;
    }

    .summary-value {
      font-size: 12px;
      font-weight: bold;
      color: {{customization.primaryColor}};
    }

    .lessons-box {
      background: #fff8e1;
      border: 2px solid #ffc107;
      border-radius: 10px;
      padding: 12px;
    }

    .lessons-title {
      font-size: 12px;
      font-weight: bold;
      color: #f57c00;
      margin-bottom: 10px;
    }

    .lesson-item {
      margin-bottom: 8px;
    }

    .lesson-label {
      font-size: 9px;
      color: #666;
      margin-bottom: 3px;
    }

    .lesson-input {
      border-bottom: 1px dotted #ccc;
      min-height: 14px;
      font-size: 10px;
    }
  </style>
</head>

<body>
  <div class="header">
    <h1 class="title">{{tt t.yearlyOverview.title year=year}}</h1>
  </div>

  <div class="year-grid">
    {{#each monthsData}}
    <div class="month-box">
      <div class="month-name">{{this.name}}</div>
      <div class="metric">
        <span class="metric-label">{{../t.yearlyOverview.income}}:</span>
        <span class="metric-value">$_____</span>
      </div>
      <div class="metric">
        <span class="metric-label">{{../t.yearlyOverview.expenses}}:</span>
        <span class="metric-value">$_____</span>
      </div>
      <div class="divider"></div>
      <div class="metric savings">
        <span class="metric-label">{{../t.yearlyOverview.saved}}:</span>
        <span class="metric-value">$_____</span>
      </div>
      <div class="metric debt">
        <span class="metric-label">{{../t.yearlyOverview.debtPaid}}:</span>
        <span class="metric-value">$_____</span>
      </div>
    </div>
    {{/each}}
  </div>

  <div class="bottom-section">
    <div class="summary-box">
      <div class="summary-title">{{t.yearlyOverview.yearInReview}}</div>
      <div class="summary-grid">
        <div class="summary-item">
          <div class="summary-label">{{t.yearlyOverview.totalEarned}}</div>
          <div class="summary-value">$________</div>
        </div>
        <div class="summary-item">
          <div class="summary-label">{{t.yearlyOverview.totalSpent}}</div>
          <div class="summary-value">$________</div>
        </div>
        <div class="summary-item">
          <div class="summary-label">{{t.yearlyOverview.totalSaved}}</div>
          <div class="summary-value">$________</div>
        </div>
        <div class="summary-item">
          <div class="summary-label">{{t.yearlyOverview.debtPaidOff}}</div>
          <div class="summary-value">$________</div>
        </div>
      </div>
    </div>

    <div class="lessons-box">
      <div class="lessons-title">{{t.yearlyOverview.yearInReview}}</div>
      <div class="lesson-item">
        <div class="lesson-label">{{t.monthlyBudget.whatDidWell}}</div>
        <div class="lesson-input"></div>
      </div>
      <div class="lesson-item">
        <div class="lesson-label">{{t.monthlyBudget.whatChange}}</div>
        <div class="lesson-input"></div>
      </div>
    </div>
  </div>
</body>

</html>
