<!-- templates/budget-planner/budget-guide.hbs -->
<!DOCTYPE html>
<html lang="{{lang}}">

<head>
  <style>
    @page {
      size: A4;
      margin: 12mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
      line-height: 1.4;
    }

    .header {
      text-align: center;
      margin-bottom: 15px;
      border-bottom: 3px solid {{customization.primaryColor}};
      padding-bottom: 10px;
    }

    .title {
      font-size: 26px;
      color: {{customization.primaryColor}};
      margin-bottom: 5px;
    }

    .subtitle {
      font-size: 13px;
      color: #666;
    }

    .rule-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 12px;
      margin-bottom: 18px;
    }

    .rule-card {
      border-radius: 12px;
      padding: 15px;
      text-align: center;
    }

    .rule-card.needs {
      background: #e3f2fd;
      border: 2px solid #2196f3;
    }

    .rule-card.wants {
      background: #fff3e0;
      border: 2px solid #ff9800;
    }

    .rule-card.savings {
      background: #e8f5e9;
      border: 2px solid #4caf50;
    }

    .rule-percent {
      font-size: 32px;
      font-weight: bold;
      margin-bottom: 5px;
    }

    .rule-card.needs .rule-percent { color: #1976d2; }
    .rule-card.wants .rule-percent { color: #f57c00; }
    .rule-card.savings .rule-percent { color: #388e3c; }

    .rule-name {
      font-size: 14px;
      font-weight: bold;
      margin-bottom: 8px;
    }

    .rule-examples {
      font-size: 11px;
      color: #666;
      line-height: 1.5;
    }

    .your-turn {
      border: 2px dashed {{customization.primaryColor}};
      border-radius: 12px;
      padding: 15px;
      margin-bottom: 15px;
    }

    .your-turn-title {
      font-size: 14px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 12px;
      text-align: center;
    }

    .your-turn-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 8px 12px;
      background: #fafafa;
      border-radius: 6px;
      margin-bottom: 6px;
    }

    .your-turn-label {
      font-size: 13px;
    }

    .your-turn-input {
      width: 90px;
      border-bottom: 2px dotted #ccc;
      text-align: right;
      font-weight: bold;
      font-size: 13px;
    }

    .tip-box {
      background: #fff8e1;
      border-left: 4px solid #ffc107;
      padding: 12px 15px;
      border-radius: 0 10px 10px 0;
    }

    .tip-title {
      font-weight: bold;
      color: #f57c00;
      margin-bottom: 8px;
      font-size: 13px;
    }

    .tip-text {
      font-size: 12px;
      color: #555;
      line-height: 1.5;
    }
  </style>
</head>

<body>
  <div class="header">
    <h1 class="title">{{t.budgetGuide.title}}</h1>
    <p class="subtitle">{{t.budgetGuide.subtitle}}</p>
  </div>

  <div class="rule-grid">
    <div class="rule-card needs">
      <div class="rule-percent">{{t.budgetGuide.needsPercent}}</div>
      <div class="rule-name">{{t.budgetGuide.needsTitle}}</div>
      <div class="rule-examples">{{t.budgetGuide.needsDesc}}</div>
      <div class="rule-examples" style="margin-top: 8px;">
        {{#each t.budgetGuide.needsItems}}
        {{this}}<br>
        {{/each}}
      </div>
    </div>
    <div class="rule-card wants">
      <div class="rule-percent">{{t.budgetGuide.wantsPercent}}</div>
      <div class="rule-name">{{t.budgetGuide.wantsTitle}}</div>
      <div class="rule-examples">{{t.budgetGuide.wantsDesc}}</div>
      <div class="rule-examples" style="margin-top: 8px;">
        {{#each t.budgetGuide.wantsItems}}
        {{this}}<br>
        {{/each}}
      </div>
    </div>
    <div class="rule-card savings">
      <div class="rule-percent">{{t.budgetGuide.savingsPercent}}</div>
      <div class="rule-name">{{t.budgetGuide.savingsTitle}}</div>
      <div class="rule-examples">{{t.budgetGuide.savingsDesc}}</div>
      <div class="rule-examples" style="margin-top: 8px;">
        {{#each t.budgetGuide.savingsItems}}
        {{this}}<br>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="your-turn">
    <div class="your-turn-title">{{t.budgetGuide.yourNumbersTitle}}</div>
    <div class="your-turn-row">
      <span class="your-turn-label">{{t.budgetGuide.monthlyIncome}}:</span>
      <span class="your-turn-input">$ _______</span>
    </div>
    <div class="your-turn-row">
      <span class="your-turn-label">50% {{t.budgetGuide.forNeeds}}:</span>
      <span class="your-turn-input">$ _______</span>
    </div>
    <div class="your-turn-row">
      <span class="your-turn-label">30% {{t.budgetGuide.forWants}}:</span>
      <span class="your-turn-input">$ _______</span>
    </div>
    <div class="your-turn-row">
      <span class="your-turn-label">20% {{t.budgetGuide.forSavings}}:</span>
      <span class="your-turn-input">$ _______</span>
    </div>
  </div>

  <div class="tip-box">
    <div class="tip-title">{{t.budgetGuide.flexibleTitle}}</div>
    <div class="tip-text">{{t.budgetGuide.flexibleText}}</div>
  </div>
</body>

</html>
