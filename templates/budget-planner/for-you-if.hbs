<!-- templates/budget-planner/for-you-if.hbs -->
<!DOCTYPE html>
<html lang="{{lang}}">

<head>
  <style>
    @page {
      size: A4;
      margin: 12mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
      line-height: 1.4;
    }

    .header {
      text-align: center;
      margin-bottom: 15px;
      border-bottom: 3px solid {{customization.primaryColor}};
      padding-bottom: 10px;
    }

    .title {
      font-size: 24px;
      color: {{customization.primaryColor}};
      margin-bottom: 5px;
    }

    .subtitle {
      font-size: 12px;
      color: #666;
    }

    .checklist {
      margin-bottom: 15px;
    }

    .check-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 8px;
    }

    .check-item {
      display: flex;
      align-items: flex-start;
      padding: 10px 12px;
      background: #f8f9fa;
      border-radius: 8px;
      border-left: 3px solid {{customization.primaryColor}};
    }

    .checkbox {
      width: 18px;
      height: 18px;
      border: 2px solid {{customization.primaryColor}};
      border-radius: 4px;
      margin-right: 10px;
      flex-shrink: 0;
      margin-top: 1px;
    }

    .check-text {
      font-size: 12px;
      color: #444;
    }

    .two-col {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 15px;
      margin-bottom: 15px;
    }

    .not-about-box {
      background: #ffebee;
      border-radius: 10px;
      padding: 15px;
    }

    .not-about-box .box-title {
      color: #c62828;
    }

    .is-about-box {
      background: #e8f5e9;
      border-radius: 10px;
      padding: 15px;
    }

    .is-about-box .box-title {
      color: #2e7d32;
    }

    .box-title {
      font-size: 13px;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .box-list {
      font-size: 11px;
      padding-left: 18px;
      margin: 0;
      color: #555;
    }

    .box-list li {
      margin-bottom: 5px;
    }

    .promise-box {
      background: linear-gradient(135deg, {{customization.primaryColor}}, {{customization.secondaryColor}});
      color: white;
      padding: 20px;
      border-radius: 12px;
      margin-top: 15px;
    }

    .promise-title {
      font-size: 16px;
      font-weight: bold;
      margin-bottom: 12px;
      text-align: center;
    }

    .promise-text {
      font-size: 12px;
      line-height: 1.7;
      text-align: center;
      margin-bottom: 15px;
    }

    .signature-row {
      display: flex;
      justify-content: space-around;
      margin-top: 15px;
    }

    .signature-item {
      text-align: center;
    }

    .signature-line {
      width: 120px;
      border-bottom: 2px solid rgba(255,255,255,0.5);
      margin-bottom: 5px;
      height: 25px;
    }

    .signature-label {
      font-size: 10px;
      opacity: 0.8;
    }
  </style>
</head>

<body>
  <div class="header">
    <h1 class="title">{{t.forYouIf.title}}</h1>
    <p class="subtitle">{{t.forYouIf.subtitle}}</p>
  </div>

  <div class="checklist">
    <div class="check-grid">
      {{#each t.forYouIf.items}}
      <div class="check-item">
        <div class="checkbox"></div>
        <span class="check-text">{{this}}</span>
      </div>
      {{/each}}
    </div>
  </div>

  <div class="two-col">
    <div class="not-about-box">
      <div class="box-title">{{t.forYouIf.notAbout}}</div>
      <ul class="box-list">
        {{#each t.forYouIf.notItems}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>

    <div class="is-about-box">
      <div class="box-title">{{t.forYouIf.thisIsAbout}}</div>
      <ul class="box-list">
        {{#each t.forYouIf.isItems}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="promise-box">
    <div class="promise-title">{{t.forYouIf.promiseTitle}}</div>
    <p class="promise-text">{{t.forYouIf.promiseText}}</p>
    <div class="signature-row">
      <div class="signature-item">
        <div class="signature-line"></div>
        <div class="signature-label">{{t.forYouIf.signatureLabel}}</div>
      </div>
      <div class="signature-item">
        <div class="signature-line"></div>
        <div class="signature-label">{{t.forYouIf.dateLabel}}</div>
      </div>
    </div>
  </div>
</body>

</html>
