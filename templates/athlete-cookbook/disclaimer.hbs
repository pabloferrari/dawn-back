<!DOCTYPE html>
<html>

<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;600;700;800&display=swap" rel="stylesheet">
  <style>
    @page {
      size: A4;
      margin: 0;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html, body {
      height: 297mm;
      width: 210mm;
      font-family: {{customization.fontFamily}};
      color: #333;
      line-height: 1.5;
    }

    .page {
      height: 297mm;
      width: 210mm;
      padding: 10mm 14mm;
      display: flex;
      flex-direction: column;
      background: linear-gradient(180deg, #FAFAFA 0%, #FFFFFF 100%);
    }

    /* Header */
    .page-header {
      text-align: center;
      margin-bottom: 6mm;
    }

    .header-logo {
      height: 11mm;
      margin-bottom: 3mm;
    }

    .disclaimer-icon {
      font-size: 32px;
      margin-bottom: 2mm;
    }

    .page-title {
      font-size: 22px;
      font-weight: 800;
      color: #C62828;
      letter-spacing: 1px;
    }

    /* Main content */
    .content {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 4mm;
    }

    /* Main disclaimer box */
    .disclaimer-box {
      background: #FFF3E0;
      border: 2px solid #FF9800;
      border-radius: 10px;
      padding: 5mm 6mm;
    }

    .disclaimer-intro {
      font-size: 14px;
      line-height: 1.5;
      margin-bottom: 4mm;
      color: #333;
    }

    .disclaimer-intro strong {
      color: #E65100;
    }

    /* Key points */
    .key-points {
      background: white;
      border-radius: 6px;
      padding: 4mm 5mm;
    }

    .key-points-title {
      font-size: 13px;
      font-weight: 800;
      color: #1B5E3F;
      margin-bottom: 3mm;
      display: flex;
      align-items: center;
      gap: 2mm;
    }

    .key-points-list {
      list-style: none;
    }

    .key-points-list li {
      font-size: 12px;
      padding: 2mm 0;
      display: flex;
      align-items: flex-start;
      gap: 2mm;
      border-bottom: 1px dashed #E0E0E0;
      line-height: 1.4;
    }

    .key-points-list li:last-child {
      border-bottom: none;
      padding-bottom: 0;
    }

    .point-icon {
      font-size: 14px;
      flex-shrink: 0;
    }

    .point-text {
      flex: 1;
    }

    .point-text strong {
      color: #1B5E3F;
    }

    /* Consult section */
    .consult-section {
      background: #E3F2FD;
      border-radius: 10px;
      padding: 4mm 5mm;
      border-left: 4px solid #1976D2;
    }

    .consult-title {
      font-size: 12px;
      font-weight: 800;
      color: #1565C0;
      margin-bottom: 3mm;
      display: flex;
      align-items: center;
      gap: 2mm;
    }

    .consult-conditions {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 2mm 4mm;
    }

    .condition-item {
      font-size: 11px;
      display: flex;
      align-items: center;
      gap: 2mm;
    }

    .condition-icon {
      font-size: 11px;
    }

    /* Nutrition disclaimer */
    .nutrition-disclaimer {
      background: #FFF8E1;
      border-radius: 10px;
      padding: 4mm 5mm;
      border-left: 4px solid #FFA000;
    }

    .nutrition-title {
      font-size: 12px;
      font-weight: 800;
      color: #F57C00;
      margin-bottom: 2mm;
      display: flex;
      align-items: center;
      gap: 2mm;
    }

    .nutrition-text {
      font-size: 11px;
      color: #555;
      line-height: 1.5;
    }

    .nutrition-text strong {
      color: #E65100;
    }

    /* Philosophy section */
    .philosophy-section {
      background: #E8F5E9;
      border-radius: 10px;
      padding: 5mm 6mm;
      text-align: center;
    }

    .philosophy-title {
      font-size: 14px;
      font-weight: 800;
      color: #2E7D32;
      margin-bottom: 2mm;
    }

    .philosophy-text {
      font-size: 13px;
      color: #555;
      line-height: 1.5;
      font-style: italic;
    }

    .philosophy-text strong {
      color: #1B5E3F;
      font-style: normal;
    }

    /* Final note */
    .final-note {
      background: #F5F5F5;
      border-radius: 6px;
      padding: 4mm;
      text-align: center;
      margin-top: auto;
    }

    .final-note-text {
      font-size: 12px;
      color: #666;
      line-height: 1.4;
    }

    .final-note-text strong {
      color: #C62828;
    }

    /* Footer */
    .page-footer {
      margin-top: 4mm;
      padding-top: 3mm;
      border-top: 1px solid #E0E0E0;
      text-align: center;
      font-size: 9px;
      color: #888;
    }

    .page-footer span {
      color: #1B5E3F;
      font-weight: 700;
    }
  </style>
</head>

