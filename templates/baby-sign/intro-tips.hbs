    }

    .check-item .label {
      font-size: 10px;
      font-weight: bold;
      color: {{customization.primaryColor}};
    }

    .check-item .desc {
      font-size: 9px;
      color: #666;
    }

    .section-title {
      font-size: 14px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 10px;
      padding-bottom: 4px;
      border-bottom: 2px solid #EEE;
    }

    .tips-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 8px;
    }

    .tip {
      padding: 8px 10px;
      background: #FAFAFA;
      border-radius: 8px;
      border-left: 3px solid {{customization.primaryColor}};
    }

    .tip-header {
      display: flex;
      align-items: center;
      margin-bottom: 4px;
    }

    .tip-number {
      width: 18px;
      height: 18px;
      background: {{customization.primaryColor}};
      color: white;
      border-radius: 50%;
      font-size: 10px;
      font-weight: bold;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 8px;
      flex-shrink: 0;
    }

    .tip-title {
      font-size: 11px;
      font-weight: bold;
      color: #333;
    }

    .tip p {
      font-size: 9px;
      margin: 0;
      color: #555;
      line-height: 1.4;
    }

    .encouragement {
