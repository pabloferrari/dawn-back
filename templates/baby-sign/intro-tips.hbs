<!DOCTYPE html>
<html>

<head>
  <style>
    @page {
      size: A4;
      margin: 18mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
      line-height: 1.6;
    }

    .header {
      text-align: center;
      margin-bottom: 20px;
      padding-bottom: 12px;
      border-bottom: 3px solid {{customization.primaryColor}};
    }

    .title {
      font-size: 30px;
      color: {{customization.primaryColor}};
      margin: 0;
    }

    .icon {
      font-size: 45px;
      margin-bottom: 8px;
    }

    .section {
      margin-bottom: 20px;
    }

    .section-title {
      font-size: 16px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 12px;
      padding-bottom: 5px;
      border-bottom: 2px solid #EEE;
    }

    .tips-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }

    .tip {
      padding: 12px;
      background: #FAFAFA;
      border-radius: 8px;
      border-left: 3px solid {{customization.primaryColor}};
    }

    .tip-header {
      display: flex;
      align-items: center;
      margin-bottom: 6px;
    }

    .tip-number {
      width: 24px;
      height: 24px;
      background: {{customization.primaryColor}};
      color: white;
      border-radius: 50%;
      font-size: 12px;
      font-weight: bold;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right: 10px;
      flex-shrink: 0;
    }

    .tip-title {
      font-size: 13px;
      font-weight: bold;
      color: #333;
    }

    .tip p {
      font-size: 11px;
      margin: 0;
      color: #555;
    }

    .positioning-box {
      background: linear-gradient(135deg, #FFF5E6 0%, #FFE6F0 100%);
      padding: 15px;
      border-radius: 10px;
      margin-bottom: 20px;
    }

    .positioning-box h3 {
      font-size: 14px;
      color: {{customization.primaryColor}};
      margin: 0 0 10px 0;
    }

    .position-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 10px;
    }

    .position-item {
      background: white;
      padding: 10px;
      border-radius: 8px;
      text-align: center;
    }

    .position-item .emoji {
      font-size: 24px;
      margin-bottom: 5px;
    }

    .position-item .name {
      font-size: 11px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 4px;
    }

    .position-item .desc {
      font-size: 10px;
      color: #666;
    }

    .checklist-box {
      background: #F0F7FF;
      padding: 15px;
      border-radius: 10px;
      margin-bottom: 20px;
    }

    .checklist-box h3 {
      font-size: 14px;
      color: {{customization.primaryColor}};
      margin: 0 0 10px 0;
    }

    .checklist-box p {
      font-size: 12px;
      margin: 0 0 8px 0;
    }

    .checklist {
      display: flex;
      gap: 15px;
    }

    .check-item {
      flex: 1;
      background: white;
      padding: 10px;
      border-radius: 6px;
      text-align: center;
    }

    .check-item .icon {
      font-size: 20px;
      margin-bottom: 4px;
    }

    .check-item .label {
      font-size: 11px;
      font-weight: bold;
      color: {{customization.primaryColor}};
    }

    .check-item .desc {
      font-size: 10px;
      color: #666;
      margin-top: 3px;
    }

    .encouragement {
      background: linear-gradient(135deg, {{customization.primaryColor}}15 0%, {{customization.secondaryColor}}15 100%);
      padding: 15px;
      border-radius: 10px;
      text-align: center;
      font-size: 13px;
      color: #444;
      margin-top: 15px;
    }
  </style>
</head>

