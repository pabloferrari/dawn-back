<!-- templates/budget-planner/starting-point.hbs -->
<!DOCTYPE html>
<html lang="{{lang}}">

<head>
  <style>
    @page {
      size: A4;
      margin: 12mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
      line-height: 1.4;
    }

    .header {
      text-align: center;
      margin-bottom: 12px;
      border-bottom: 3px solid {{customization.primaryColor}};
      padding-bottom: 8px;
    }

    .title {
      font-size: 24px;
      color: {{customization.primaryColor}};
      margin-bottom: 5px;
    }

    .subtitle {
      font-size: 12px;
      color: #666;
    }

    .two-col {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 15px;
      margin-bottom: 12px;
    }

    .section {
      margin-bottom: 12px;
    }

    .section-title {
      font-size: 12px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 6px;
      padding-bottom: 4px;
      border-bottom: 2px solid {{customization.primaryColor}};
    }

    .section-desc {
      font-size: 10px;
      color: #888;
      margin-bottom: 8px;
    }

    .input-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 6px 10px;
      background: #fafafa;
      border-radius: 4px;
      margin-bottom: 4px;
    }

    .input-label {
      font-size: 11px;
      color: #444;
    }

    .input-value {
      font-size: 11px;
      font-weight: bold;
      min-width: 80px;
      text-align: right;
      border-bottom: 1px dotted #999;
    }

    .total-row {
      background: {{customization.primaryColor}}15;
      border-left: 3px solid {{customization.primaryColor}};
    }

    .total-row .input-label {
      font-weight: bold;
    }

    .debt-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 10px;
    }

    .debt-table th {
      background: {{customization.primaryColor}};
      color: white;
      padding: 6px 4px;
      text-align: left;
      font-weight: 600;
    }

    .debt-table td {
      padding: 6px 4px;
      border-bottom: 1px solid #e0e0e0;
    }

    .debt-table tr:last-child {
      background: #f5f5f5;
      font-weight: bold;
    }

    .snapshot-box {
      background: linear-gradient(135deg, {{customization.primaryColor}}, {{customization.secondaryColor}});
      color: white;
      padding: 15px;
      border-radius: 10px;
      margin-top: 12px;
    }

    .snapshot-title {
      font-size: 14px;
      font-weight: bold;
      text-align: center;
      margin-bottom: 12px;
    }

    .snapshot-grid {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 10px;
    }

    .snapshot-item {
      background: rgba(255,255,255,0.15);
      padding: 10px;
      border-radius: 8px;
      text-align: center;
    }

    .snapshot-label {
      font-size: 10px;
      opacity: 0.9;
      margin-bottom: 5px;
    }

    .snapshot-value {
      font-size: 16px;
      font-weight: bold;
    }
  </style>
</head>

<body>
  <div class="header">
    <h1 class="title">{{t.startingPoint.title}}</h1>
    <p class="subtitle">{{t.startingPoint.subtitle}}</p>
  </div>

  <div class="two-col">
    <div class="section">
      <div class="section-title">üíµ {{t.startingPoint.monthlyIncomeTitle}}</div>
      <div class="section-desc">{{t.startingPoint.monthlyIncomeDesc}}</div>
      <div class="input-row">
        <span class="input-label">{{t.startingPoint.primaryIncome}}</span>
        <span class="input-value">$ _______</span>
      </div>
      <div class="input-row">
        <span class="input-label">{{t.startingPoint.secondaryIncome}}</span>
        <span class="input-value">$ _______</span>
      </div>
      <div class="input-row">
        <span class="input-label">{{t.startingPoint.otherIncome}}</span>
        <span class="input-value">$ _______</span>
