<!-- templates/budget-planner/subscriptions.hbs -->
<!DOCTYPE html>
<html lang="{{lang}}">

<head>
  <style>
    @page {
      size: A4;
      margin: 15mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
      line-height: 1.4;
    }

    .header {
      text-align: center;
      margin-bottom: 15px;
      border-bottom: 3px solid {{customization.primaryColor}};
      padding-bottom: 12px;
    }

    .title {
      font-size: 26px;
      color: {{customization.primaryColor}};
      margin: 0;
    }

    .subtitle {
      font-size: 13px;
      color: #666;
      margin-top: 5px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 11px;
    }

    th {
      background: {{customization.primaryColor}};
      color: white;
      padding: 10px 8px;
      text-align: left;
      font-size: 11px;
    }

    td {
      padding: 12px 8px;
      border-bottom: 1px solid #e0e0e0;
      vertical-align: middle;
    }

    tr:nth-child(even) {
      background: #fafafa;
    }

    .amount-col { width: 15%; text-align: right; }
    .freq-col { width: 15%; text-align: center; }
    .worth-col { width: 15%; text-align: center; }
    .action-col { width: 15%; text-align: center; }

    .checkbox {
      width: 18px;
      height: 18px;
      border: 2px solid {{customization.primaryColor}};
      border-radius: 3px;
      display: inline-block;
    }

    .summary-section {
      margin-top: 20px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 15px;
    }

    .summary-box {
      padding: 15px;
      border-radius: 10px;
      background: linear-gradient(135deg, {{customization.primaryColor}}10, {{customization.secondaryColor}}10);
      border: 2px solid {{customization.primaryColor}};
    }

    .summary-title {
      font-size: 14px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 12px;
    }

    .summary-row {
      display: flex;
      justify-content: space-between;
      padding: 8px 0;
      border-bottom: 1px solid #e0e0e0;
      font-size: 12px;
    }

    .summary-row:last-child {
      border-bottom: none;
      padding-top: 10px;
      font-weight: bold;
      font-size: 14px;
    }

    .summary-value {
      font-weight: bold;
      color: {{customization.primaryColor}};
    }

    .action-box {
      padding: 15px;
      border-radius: 10px;
      background: #f5f5f5;
    }

    .action-title {
      font-size: 14px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 10px;
    }

    .action-item {
      margin-bottom: 10px;
    }

    .action-label {
      font-size: 11px;
      color: #666;
      margin-bottom: 4px;
    }

    .action-input {
      border-bottom: 1px dotted #ccc;
      min-height: 18px;
    }
  </style>
</head>

<body>
  <div class="header">
    <h1 class="title">{{t.subscriptions.title}}</h1>
    <p class="subtitle">{{t.subscriptions.subtitle}}</p>
  </div>

  <table>
    <thead>
      <tr>
        <th>{{t.subscriptions.service}}</th>
        <th class="amount-col">{{t.subscriptions.cost}}</th>
        <th class="freq-col">{{t.subscriptions.useFrequency}}</th>
        <th class="worth-col">{{t.subscriptions.worthIt}}</th>
        <th class="action-col">{{t.subscriptions.action}}</th>
      </tr>
    </thead>
    <tbody>
      {{#times 12}}
      <tr>
        <td></td>
        <td class="amount-col">$</td>
        <td class="freq-col"></td>
        <td class="worth-col"><div class="checkbox"></div></td>
        <td class="action-col"></td>
      </tr>
      {{/times}}
    </tbody>
  </table>

  <div class="summary-section">
    <div class="summary-box">
      <div class="summary-title">{{t.subscriptions.totalMonthly}}</div>
      <div class="summary-row">
        <span>{{t.subscriptions.totalMonthly}}</span>
        <span class="summary-value">$_______</span>
      </div>
      <div class="summary-row">
        <span>{{t.subscriptions.totalYearly}}</span>
        <span class="summary-value">$_______</span>
      </div>
      <div class="summary-row">
        <span>{{t.subscriptions.potentialSavings}}</span>
        <span class="summary-value">$_______</span>
      </div>
    </div>

    <div class="action-box">
      <div class="action-title">{{t.subscriptions.actionPlan}}</div>
      <div class="action-item">
        <div class="action-label">{{t.subscriptions.cancelThis}}</div>
        <div class="action-input"></div>
      </div>
      <div class="action-item">
        <div class="action-label">{{t.subscriptions.downgradeThis}}</div>
        <div class="action-input"></div>
      </div>
      <div class="action-item">
        <div class="action-label">{{t.subscriptions.reviewDate}}</div>
        <div class="action-input"></div>
      </div>
    </div>
  </div>
</body>

</html>
