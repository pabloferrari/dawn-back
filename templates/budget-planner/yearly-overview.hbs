<!-- templates/budget-planner/yearly-overview.hbs -->
<!DOCTYPE html>
<html>

<head>
  <style>
    @page {
      size: A4 landscape;
      margin: 15mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
    }

    .header {
      text-align: center;
      margin-bottom: 20px;
    }

    .title {
      font-size: 28px;
      color: {{customization.primaryColor}};
      margin: 0;
    }

    .year-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 15px;
    }

    .month-box {
      border: 2px solid {{customization.primaryColor}};
      border-radius: 8px;
      padding: 15px;
      background: white;
    }

    .month-name {
      font-size: 16px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 10px;
      text-align: center;
    }

    .metric {
      display: flex;
      justify-content: space-between;
      margin: 8px 0;
      font-size: 11px;
    }

    .metric-label {
      color: #666;
    }

    .metric-value {
      font-weight: bold;
    }

    .divider {
      border-top: 1px solid #ddd;
      margin: 8px 0;
    }
  </style>
</head>

