      <div class="input-row">
        <span class="input-label">{{t.startingPoint.utilities}}</span>
        <span class="input-value">$ _______</span>
      </div>
      <div class="input-row">
        <span class="input-label">{{t.startingPoint.insurance}}</span>
        <span class="input-value">$ _______</span>
      </div>
      <div class="input-row">
