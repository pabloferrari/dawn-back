<!-- templates/budget-planner/monthly-budget.hbs -->
<!DOCTYPE html>
<html lang="{{lang}}">

<head>
  <style>
    @page {
      size: A4;
      margin: 12mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
      font-size: 11px;
    }

    .header {
      text-align: center;
      margin-bottom: 12px;
      border-bottom: 3px solid {{customization.primaryColor}};
      padding-bottom: 10px;
    }

    .month {
      font-size: 26px;
      color: {{customization.primaryColor}};
      margin: 0;
    }

    .priorities-box {
      background: linear-gradient(135deg, {{customization.primaryColor}}08, {{customization.secondaryColor}}08);
      border: 1px solid {{customization.primaryColor}}30;
      border-radius: 8px;
      padding: 10px 12px;
      margin-bottom: 12px;
    }

    .priorities-title {
      font-size: 11px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 6px;
    }

    .priorities-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 6px;
    }

    .priority-item {
      display: flex;
      align-items: center;
      gap: 6px;
      font-size: 10px;
    }

    .priority-num {
      width: 16px;
      height: 16px;
      background: {{customization.primaryColor}};
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 9px;
      font-weight: bold;
      flex-shrink: 0;
    }

    .priority-line {
      flex: 1;
      border-bottom: 1px dotted #ccc;
      min-height: 14px;
    }

    .reduce-item {
      display: flex;
      align-items: center;
      gap: 6px;
      font-size: 10px;
      margin-top: 6px;
      padding-top: 6px;
      border-top: 1px dashed #e0e0e0;
    }

    .section {
      margin: 10px 0;
    }

    .section-title {
      background: {{customization.primaryColor}};
      color: white;
      padding: 5px 10px;
      font-size: 12px;
      font-weight: bold;
      margin-bottom: 4px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th {
      background: #f5f5f5;
      padding: 5px 6px;
      text-align: left;
      border-bottom: 2px solid {{customization.primaryColor}};
      font-size: 10px;
    }

    td {
      padding: 5px 6px;
      border-bottom: 1px solid #e0e0e0;
    }

    .amount-col {
      width: 70px;
      text-align: right;
    }

    .total-row {
      font-weight: bold;
      background: #f9f9f9;
    }

    .summary-box {
      display: flex;
      justify-content: space-around;
      margin-top: 10px;
      padding: 10px;
      background: #f5f5f5;
      border-radius: 6px;
    }

    .summary-item {
      text-align: center;
    }

    .summary-label {
      font-size: 10px;
      color: #666;
    }

    .summary-value {
      font-size: 16px;
      font-weight: bold;
      color: {{customization.primaryColor}};
    }

    .reflection-box {
      margin-top: 12px;
      border: 2px solid {{customization.secondaryColor}};
      border-radius: 8px;
      padding: 10px;
      background: {{customization.secondaryColor}}08;
    }

    .reflection-title {
      font-size: 11px;
      font-weight: bold;
      color: {{customization.secondaryColor}};
      margin-bottom: 8px;
      text-align: center;
    }

    .reflection-grid {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 6px;
      margin-bottom: 6px;
    }

    .reflection-grid-2 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 6px;
    }

    .reflection-item {
      font-size: 9px;
    }

    .reflection-label {
      color: #666;
      margin-bottom: 2px;
    }

    .reflection-input {
      border: 1px solid #ddd;
      border-radius: 4px;
      padding: 5px;
      min-height: 30px;
      background: white;
    }

    .reflection-highlight {
      background: linear-gradient(135deg, {{customization.primaryColor}}10, {{customization.secondaryColor}}10);
      border-color: {{customization.primaryColor}}40;
    }

    .reflection-highlight .reflection-label {
      color: {{customization.primaryColor}};
      font-weight: bold;
    }

    .tip-footer {
      margin-top: 8px;
      text-align: center;
      font-size: 9px;
      color: #888;
      font-style: italic;
    }
  </style>
</head>

<body>
  <div class="header">
    <h1 class="month">{{currentMonth}} {{year}}</h1>
  </div>

  <!-- Priorities Section -->
  <div class="priorities-box">
    <div class="priorities-title">{{t.monthlyBudget.prioritiesTitle}}</div>
    <div class="priorities-grid">
      <div class="priority-item">
        <span class="priority-num">1</span>
        <div class="priority-line"></div>
      </div>
      <div class="priority-item">
        <span class="priority-num">2</span>
        <div class="priority-line"></div>
      </div>
      <div class="priority-item">
        <span class="priority-num">3</span>
        <div class="priority-line"></div>
      </div>
      <div class="reduce-item">
        <span style="color: {{customization.primaryColor}}; font-weight: bold;">{{t.monthlyBudget.reduceExpense}}</span>
        <div class="priority-line"></div>
      </div>
    </div>
  </div>

  <!-- Income Section -->
  <div class="section">
    <div class="section-title">{{t.monthlyBudget.income}}</div>
    <table>
      <tr>
        <th>{{t.monthlyBudget.source}}</th>
        <th class="amount-col">{{t.monthlyBudget.planned}}</th>
        <th class="amount-col">{{t.monthlyBudget.actual}}</th>
      </tr>
      {{#each incomeRows}}
      <tr>
        <td>{{this.label}}</td>
        <td class="amount-col">$</td>
        <td class="amount-col">$</td>
      </tr>
      {{/each}}
      <tr class="total-row">
        <td>{{t.monthlyBudget.totalIncome}}</td>
        <td class="amount-col">$</td>
        <td class="amount-col">$</td>
      </tr>
    </table>
  </div>

  <!-- Expenses Section -->
  <div class="section">
    <div class="section-title">{{t.monthlyBudget.expenses}}</div>
    <table>
      <tr>
        <th>{{t.monthlyBudget.category}}</th>
        <th class="amount-col">{{t.monthlyBudget.planned}}</th>
        <th class="amount-col">{{t.monthlyBudget.actual}}</th>
      </tr>
      {{#each expenseCategories}}
      <tr>
        <td>{{this.label}}</td>
        <td class="amount-col">$</td>
        <td class="amount-col">$</td>
      </tr>
      {{/each}}
      <tr class="total-row">
        <td>{{t.monthlyBudget.totalExpenses}}</td>
        <td class="amount-col">$</td>
        <td class="amount-col">$</td>
      </tr>
    </table>
  </div>

  <!-- Summary -->
  <div class="summary-box">
    <div class="summary-item">
      <div class="summary-label">{{t.monthlyBudget.totalIncomeLabel}}</div>
      <div class="summary-value">$______</div>
    </div>
    <div class="summary-item">
      <div class="summary-label">{{t.monthlyBudget.totalExpensesLabel}}</div>
      <div class="summary-value">$______</div>
    </div>
    <div class="summary-item">
      <div class="summary-label">{{t.monthlyBudget.balance}}</div>
      <div class="summary-value">$______</div>
    </div>
  </div>

  <!-- Monthly Reflection -->
  <div class="reflection-box">
    <div class="reflection-title">{{t.monthlyBudget.reflectionTitle}}</div>
    <div class="reflection-grid">
      <div class="reflection-item">
        <div class="reflection-label">{{t.monthlyBudget.whatDidWell}}</div>
        <div class="reflection-input"></div>
      </div>
      <div class="reflection-item">
        <div class="reflection-label">{{t.monthlyBudget.whereOverspent}}</div>
        <div class="reflection-input"></div>
      </div>
      <div class="reflection-item">
        <div class="reflection-label">{{t.monthlyBudget.whatChange}}</div>
        <div class="reflection-input"></div>
      </div>
    </div>
    <div class="reflection-grid-2">
      <div class="reflection-item reflection-highlight">
        <div class="reflection-label">{{t.monthlyBudget.smallWin}}</div>
        <div class="reflection-input"></div>
      </div>
      <div class="reflection-item reflection-highlight">
        <div class="reflection-label">{{t.monthlyBudget.habitFocus}}</div>
        <div class="reflection-input"></div>
      </div>
    </div>
  </div>

  <div class="tip-footer">{{monthTip}}</div>
</body>

</html>
