<!-- templates/budget-planner/net-worth.hbs -->
<!DOCTYPE html>
<html lang="{{lang}}">

<head>
  <style>
    @page {
      size: A4;
      margin: 12mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
      line-height: 1.4;
    }

    .header {
      text-align: center;
      margin-bottom: 15px;
      border-bottom: 3px solid {{customization.primaryColor}};
      padding-bottom: 10px;
    }

    .title {
      font-size: 26px;
      color: {{customization.primaryColor}};
      margin: 0;
    }

    .subtitle {
      font-size: 12px;
      color: #666;
      margin-top: 5px;
    }

    .tracker-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 8px;
    }

    .quarter-column {
      border: 2px solid {{customization.primaryColor}};
      border-radius: 8px;
      overflow: hidden;
    }

    .quarter-header {
      background: {{customization.primaryColor}};
      color: white;
      padding: 8px;
      text-align: center;
      font-weight: bold;
      font-size: 13px;
    }

    .quarter-date {
      font-size: 9px;
      opacity: 0.9;
      font-weight: normal;
    }

    .quarter-content {
      padding: 10px;
    }

    .section-label {
      font-size: 10px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 6px;
      padding-bottom: 4px;
      border-bottom: 1px solid #e0e0e0;
    }

    .section-label.assets { color: #4caf50; }
    .section-label.liabilities { color: #e91e63; }

    .row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 3px 0;
      font-size: 9px;
    }

    .row-label { color: #555; }

    .row-value {
      font-weight: 500;
      min-width: 50px;
      text-align: right;
      border-bottom: 1px dotted #ccc;
    }

    .total-row {
      margin-top: 6px;
      padding-top: 6px;
      border-top: 2px solid #e0e0e0;
      font-weight: bold;
    }

    .total-row.assets .row-value { color: #4caf50; }
    .total-row.liabilities .row-value { color: #e91e63; }

    .net-worth-box {
      margin-top: 10px;
      padding: 8px;
      background: linear-gradient(135deg, {{customization.primaryColor}}15, {{customization.secondaryColor}}15);
      border-radius: 6px;
      text-align: center;
    }

    .net-worth-label {
      font-size: 8px;
      color: #666;
      margin-bottom: 2px;
    }

    .net-worth-value {
      font-size: 14px;
      font-weight: bold;
      color: {{customization.primaryColor}};
    }

    .comparison-section {
      margin-top: 15px;
      padding: 12px;
      background: #f5f5f5;
      border-radius: 8px;
    }

    .comparison-title {
      font-size: 13px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 10px;
      text-align: center;
    }

    .comparison-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 10px;
    }

    .comparison-item {
      background: white;
      padding: 10px;
      border-radius: 6px;
      text-align: center;
    }

    .comparison-label {
      font-size: 10px;
      color: #666;
      margin-bottom: 5px;
    }

    .comparison-value {
      font-size: 14px;
      font-weight: bold;
      color: {{customization.primaryColor}};
    }
  </style>
</head>

<body>
  <div class="header">
    <h1 class="title">{{t.netWorth.title}}</h1>
    <p class="subtitle">{{t.netWorth.subtitle}}</p>
  </div>

  <div class="tracker-grid">
    {{#each quarters}}
    <div class="quarter-column">
      <div class="quarter-header">
        Q{{this.number}}
        <div class="quarter-date">{{this.months}}</div>
      </div>
      <div class="quarter-content">
        <div class="section-label assets">{{../t.netWorth.assets}}</div>
        <div class="row">
          <span class="row-label">{{../t.netWorth.checking}}</span>
          <span class="row-value">$____</span>
        </div>
        <div class="row">
          <span class="row-label">{{../t.netWorth.savings}}</span>
          <span class="row-value">$____</span>
        </div>
        <div class="row">
          <span class="row-label">{{../t.netWorth.retirement}}</span>
          <span class="row-value">$____</span>
        </div>
        <div class="row">
          <span class="row-label">{{../t.netWorth.other}}</span>
          <span class="row-value">$____</span>
        </div>
        <div class="row total-row assets">
          <span class="row-label">{{../t.common.total}}</span>
          <span class="row-value">$____</span>
        </div>

        <div class="section-label liabilities" style="margin-top: 10px;">{{../t.netWorth.liabilities}}</div>
        <div class="row">
          <span class="row-label">{{../t.netWorth.creditCards}}</span>
          <span class="row-value">$____</span>
        </div>
        <div class="row">
          <span class="row-label">{{../t.netWorth.studentLoans}}</span>
          <span class="row-value">$____</span>
        </div>
        <div class="row">
          <span class="row-label">{{../t.netWorth.carLoan}}</span>
          <span class="row-value">$____</span>
        </div>
        <div class="row">
          <span class="row-label">{{../t.netWorth.other}}</span>
          <span class="row-value">$____</span>
        </div>
        <div class="row total-row liabilities">
          <span class="row-label">{{../t.common.total}}</span>
          <span class="row-value">$____</span>
        </div>

        <div class="net-worth-box">
          <div class="net-worth-label">{{../t.netWorth.netWorthLabel}}</div>
          <div class="net-worth-value">$______</div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <div class="comparison-section">
    <div class="comparison-title">{{t.netWorth.progressTitle}}</div>
    <div class="comparison-grid">
      <div class="comparison-item">
        <div class="comparison-label">{{t.netWorth.assetsLabel}}</div>
        <div class="comparison-value">$________</div>
      </div>
      <div class="comparison-item">
        <div class="comparison-label">{{t.netWorth.liabilitiesLabel}}</div>
        <div class="comparison-value">$________</div>
      </div>
      <div class="comparison-item">
        <div class="comparison-label">{{t.netWorth.change}}</div>
        <div class="comparison-value">$________</div>
      </div>
    </div>
  </div>
</body>

</html>
