      color: {{customization.primaryColor}};
      margin: 0 0 8px 0;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .section h3 .icon {
      font-size: 16px;
    }

    /* Recipe anatomy */
    .recipe-anatomy {
      background: #FAFAFA;
      border-radius: 10px;
      padding: 12px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }

    .anatomy-item {
      display: flex;
      align-items: flex-start;
      gap: 8px;
    }

    .anatomy-number {
      width: 22px;
      height: 22px;
      background: {{customization.primaryColor}};
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 11px;
      font-weight: 700;
      flex-shrink: 0;
    }

    .anatomy-text {
      font-size: 11px;
    }

    .anatomy-text strong {
      display: block;
      color: #333;
      margin-bottom: 2px;
    }

    .anatomy-text span {
      color: #666;
    }

    /* Categories grid */
    .categories-grid {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      gap: 8px;
    }

    .category-item {
      text-align: center;
      padding: 10px 5px;
      background: #FAFAFA;
      border-radius: 8px;
    }

    .category-icon {
      font-size: 22px;
      margin-bottom: 4px;
    }

    .category-name {
      font-size: 9px;
      font-weight: 600;
      color: #444;
    }

    /* Tags */
    .tags-container {
      display: flex;
      flex-wrap: wrap;
      gap: 6px;
    }

    .tag {
      display: inline-flex;
      align-items: center;
      gap: 4px;
      padding: 4px 10px;
      border-radius: 12px;
      font-size: 10px;
      font-weight: 600;
    }

    .tag.nutrition {
      background: #E8F5E9;
      color: #2E7D32;
    }

    .tag.dietary {
      background: #FFF3E0;
      color: #E65100;
    }

    .tag.timing {
      background: #E3F2FD;
      color: #1565C0;
    }

    .tag.prep {
      background: #F3E5F5;
      color: #7B1FA2;
    }

    /* Timing guide */
    .timing-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 10px;
    }

    .timing-item {
      background: linear-gradient(135deg, {{customization.primaryColor}}10 0%, {{customization.secondaryColor}}10 100%);
      padding: 12px 10px;
      border-radius: 10px;
      text-align: center;
    }

    .timing-icon {
      font-size: 26px;
      margin-bottom: 5px;
    }

    .timing-title {
      font-size: 11px;
      font-weight: 700;
      color: {{customization.primaryColor}};
      margin-bottom: 3px;
    }

    .timing-desc {
      font-size: 9px;
      color: #666;
      line-height: 1.4;
    }

    /* Pro tip */
    .pro-tip {
      background: linear-gradient(135deg, {{customization.primaryColor}} 0%, {{customization.secondaryColor}} 100%);
      padding: 14px 20px;
      border-radius: 12px;
      color: white;
      display: flex;
      align-items: center;
      gap: 15px;
      margin-top: 15px;
    }

    .pro-tip-icon {
      font-size: 32px;
    }

    .pro-tip-content {
      flex: 1;
    }

    .pro-tip-title {
      font-size: 13px;
      font-weight: 700;
      margin-bottom: 3px;
    }

    .pro-tip-text {
      font-size: 11px;
      opacity: 0.95;
    }
  </style>
</head>

