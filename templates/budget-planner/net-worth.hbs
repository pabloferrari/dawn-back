<!DOCTYPE html>
<html>

<head>
  <style>
    @page {
      size: A4;
      margin: 15mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
      line-height: 1.4;
    }

    .header {
      text-align: center;
      margin-bottom: 20px;
      border-bottom: 3px solid {{customization.primaryColor}};
      padding-bottom: 12px;
    }

    .title {
      font-size: 28px;
      color: {{customization.primaryColor}};
      margin: 0;
    }

    .subtitle {
      font-size: 13px;
      color: #666;
      margin-top: 5px;
    }

    .intro {
      background: #e8f5e9;
      border-left: 4px solid #4caf50;
      padding: 12px 15px;
      margin-bottom: 20px;
      border-radius: 0 8px 8px 0;
      font-size: 12px;
    }

    .intro strong {
      color: #2e7d32;
    }

    .tracker-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 10px;
    }

    .quarter-column {
      border: 2px solid {{customization.primaryColor}};
      border-radius: 10px;
      overflow: hidden;
    }

    .quarter-header {
      background: {{customization.primaryColor}};
      color: white;
      padding: 10px;
      text-align: center;
      font-weight: bold;
      font-size: 14px;
    }

    .quarter-date {
      font-size: 10px;
      opacity: 0.9;
      font-weight: normal;
    }

    .quarter-content {
      padding: 12px;
    }

    .section-label {
      font-size: 11px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 8px;
      padding-bottom: 5px;
      border-bottom: 1px solid #e0e0e0;
    }

    .section-label.assets {
      color: #4caf50;
    }

    .section-label.liabilities {
      color: #e91e63;
    }

    .row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 4px 0;
      font-size: 10px;
    }

    .row-label {
      color: #555;
    }

    .row-value {
      font-weight: 500;
      min-width: 55px;
      text-align: right;
      border-bottom: 1px dotted #ccc;
    }

    .total-row {
      margin-top: 8px;
      padding-top: 8px;
      border-top: 2px solid #e0e0e0;
      font-weight: bold;
    }

    .total-row.assets .row-value {
      color: #4caf50;
    }

    .total-row.liabilities .row-value {
      color: #e91e63;
    }

    .net-worth-box {
      margin-top: 12px;
      padding: 10px;
      background: linear-gradient(135deg, {{customization.primaryColor}}15, {{customization.secondaryColor}}15);
      border-radius: 8px;
      text-align: center;
    }

    .net-worth-label {
      font-size: 9px;
      color: #666;
      margin-bottom: 3px;
    }

    .net-worth-value {
      font-size: 16px;
      font-weight: bold;
      color: {{customization.primaryColor}};
    }

    .comparison-section {
      margin-top: 25px;
      padding: 15px;
      background: #f5f5f5;
      border-radius: 10px;
    }

    .comparison-title {
      font-size: 14px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 12px;
      text-align: center;
    }

    .comparison-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 15px;
      background: white;
      border-radius: 8px;
      margin-bottom: 8px;
    }

    .comparison-label {
      font-size: 12px;
      color: #555;
    }

    .comparison-value {
      font-size: 16px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      min-width: 100px;
      text-align: right;
      border-bottom: 2px dotted #ccc;
    }

    .change-indicator {
      display: flex;
      align-items: center;
      gap: 5px;
      font-size: 12px;
    }

    .tip-box {
      margin-top: 20px;
      padding: 12px 15px;
      background: #fff8e1;
      border-radius: 8px;
      font-size: 11px;
      text-align: center;
    }

    .tip-box strong {
      color: #f57c00;
    }
  </style>
</head>

