<!-- templates/budget-planner/cover.hbs -->
<!DOCTYPE html>
<html lang="{{lang}}">

<head>
  <style>
    @page {
      size: A4;
      margin: 0;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: {{customization.fontFamily}};
      background: linear-gradient(145deg, {{customization.primaryColor}} 0%, {{customization.secondaryColor}} 100%);
      height: 297mm;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      color: white;
      text-align: center;
      padding: 40px;
    }

    .year {
      font-size: 140px;
      font-weight: 800;
      letter-spacing: -5px;
      margin-bottom: 10px;
      text-shadow: 0 4px 20px rgba(0,0,0,0.2);
    }

    .title {
      font-size: 48px;
      font-weight: 700;
      margin: 10px 0;
      text-transform: uppercase;
      letter-spacing: 3px;
    }

    .system-name {
      font-size: 28px;
      font-weight: 600;
      margin: 15px 0;
      padding: 12px 35px;
      background: rgba(255,255,255,0.15);
      border-radius: 8px;
      letter-spacing: 1px;
    }

    .subtitle {
      font-size: 17px;
      opacity: 0.95;
      max-width: 480px;
      line-height: 1.6;
      margin-top: 15px;
      font-weight: 300;
    }

    .badge {
      padding: 10px 25px;
      background: rgba(255,255,255,0.2);
      border-radius: 30px;
      font-size: 13px;
      text-transform: uppercase;
      letter-spacing: 2px;
      backdrop-filter: blur(10px);
    }

    .name {
      font-size: 24px;
      margin-top: 50px;
      font-style: italic;
      opacity: 0.9;
    }

    .icon-row {
      display: flex;
      gap: 30px;
      margin-top: 30px;
      opacity: 0.8;
      font-size: 28px;
    }

    .tagline {
      position: absolute;
      bottom: 40px;
      font-size: 13px;
      opacity: 0.7;
      letter-spacing: 1px;
    }
  </style>
</head>

<body>
  <div class="badge">{{t.cover.badge}}</div>

  <h1 class="year">{{year}}</h1>
  <h2 class="title">{{t.cover.title}}</h2>
  <div class="system-name">{{t.cover.systemName}}</div>
  <p class="subtitle">{{t.cover.subtitle}}</p>

  <div class="icon-row">
    <span>ðŸ“Š</span>
    <span>ðŸ’°</span>
    <span>ðŸŽ¯</span>
  </div>

  {{#if userName}}
  <p class="name">{{userName}}</p>
  {{/if}}

  <p class="tagline">{{t.cover.tagline}}</p>
</body>

</html>
