<!-- templates/baby-sign/sign-page.hbs -->
<!DOCTYPE html>
<html>

<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&family=Lato:wght@400;700&family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    @page {
      size: A4;
      margin: 15mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
      display: flex;
      flex-direction: column;
      height: 267mm;
    }

    .word-header {
      text-align: center;
      padding: 20px;
      background: {{categoryColor}};
      color: white;
      border-radius: 15px 15px 0 0;
      margin-bottom: 0;
    }

    .word {
      font-size: 56px;
      font-weight: bold;
      margin: 0;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    .illustration-container {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      background: #F8F9FA;
      border: 3px solid {{categoryColor}};
      border-top: none;
      border-radius: 0 0 15px 15px;
      padding: 40px;
      margin-bottom: 20px;
    }

    .placeholder-image {
      width: 100%;
      max-width: 400px;
      height: 400px;
      background: white;
      border: 3px dashed #ccc;
      border-radius: 15px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      color: #999;
      font-size: 18px;
    }

    .placeholder-emoji {
      font-size: 80px;
      margin-bottom: 20px;
    }

    .info-section {
      background: white;
      border: 3px solid {{categoryColor}};
      border-radius: 15px;
      padding: 20px;
      margin-bottom: 15px;
    }

    .section-title {
      font-size: 20px;
      font-weight: bold;
      color: {{categoryColor}};
      margin-bottom: 12px;
      display: flex;
      align-items: center;
    }

    .section-icon {
      font-size: 24px;
      margin-right: 10px;
    }

    .section-content {
      font-size: 16px;
      line-height: 1.6;
      color: #555;
    }

    .tip-section {
      background: linear-gradient(135deg, #FFF9E6 0%, #FFE5E5 100%);
      border: 3px solid {{categoryColor}};
      border-radius: 15px;
      padding: 20px;
    }
  </style>
</head>

<body>
  <div class="word-header">
    <h1 class="word">{{sign.word}}</h1>
  </div>

  <div class="illustration-container">
    {{#if sign.imageUrl}}
    <img src="{{sign.imageUrl}}" alt="{{sign.word}} sign"
      style="max-width: 100%; max-height: 100%; border-radius: 10px;">
    {{else}}
    <div class="placeholder-image">
      <div class="placeholder-emoji">ðŸ¤Ÿ</div>
      <div>Sign illustration for</div>
      <div style="font-weight: bold; margin-top: 10px;">{{sign.word}}</div>
    </div>
    {{/if}}
  </div>

  <div class="info-section">
    <div class="section-title">
      <span class="section-icon">âœ‹</span>
      How to Sign
    </div>
    <div class="section-content">{{sign.howToSign}}</div>
  </div>

  <div class="tip-section">
    <div class="section-title">
      <span class="section-icon">ðŸ’¡</span>
      Teaching Tip
    </div>
    <div class="section-content">{{sign.teachingTip}}</div>
    {{#if sign.contextExample}}
    <div class="section-content" style="margin-top: 10px; font-style: italic;">
      Example: {{sign.contextExample}}
    </div>
    {{/if}}
  </div>
</body>

</html>
