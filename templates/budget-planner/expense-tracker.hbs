<!-- templates/budget-planner/expense-tracker.hbs -->
<!DOCTYPE html>
<html lang="{{lang}}">

<head>
  <style>
    @page {
      size: A4;
      margin: 12mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
    }

    .header {
      text-align: center;
      margin-bottom: 15px;
      border-bottom: 3px solid {{customization.primaryColor}};
      padding-bottom: 10px;
    }

    .title {
      font-size: 22px;
      color: {{customization.primaryColor}};
      margin: 0;
    }

    .month-label {
      font-size: 14px;
      color: #666;
      margin-top: 4px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 10px;
    }

    th {
      background: {{customization.primaryColor}};
      color: white;
      padding: 6px 4px;
      text-align: left;
      font-size: 10px;
    }

    td {
      padding: 7px 4px;
      border-bottom: 1px solid #e0e0e0;
    }

    .date-col { width: 50px; }
    .category-col { width: 85px; }
    .description-col { width: auto; }
    .amount-col { width: 65px; text-align: right; }
    .notes-col { width: 100px; font-size: 9px; }

    tr:nth-child(even) { background: #f9f9f9; }

    .total-section {
      margin-top: 10px;
      display: flex;
      justify-content: flex-end;
    }

    .total-box {
      background: {{customization.primaryColor}};
      color: white;
      padding: 10px 20px;
      border-radius: 8px;
      text-align: center;
    }

    .total-label {
      font-size: 10px;
      opacity: 0.9;
    }

    .total-value {
      font-size: 18px;
      font-weight: bold;
    }
  </style>
</head>

<body>
  <div class="header">
    <h1 class="title">{{t.expenseTracker.title}}</h1>
    <p class="month-label">{{currentMonth}} {{year}}</p>
  </div>

  <table>
    <thead>
      <tr>
        <th class="date-col">{{t.expenseTracker.date}}</th>
        <th class="category-col">{{t.expenseTracker.category}}</th>
        <th class="description-col">{{t.expenseTracker.description}}</th>
        <th class="amount-col">{{t.expenseTracker.amount}}</th>
        <th class="notes-col">{{t.common.notes}}</th>
      </tr>
    </thead>
    <tbody>
      {{#times 25}}
      <tr>
        <td class="date-col"></td>
        <td class="category-col"></td>
        <td class="description-col"></td>
        <td class="amount-col">$</td>
        <td class="notes-col"></td>
      </tr>
      {{/times}}
    </tbody>
  </table>

  <div class="total-section">
    <div class="total-box">
      <div class="total-label">{{t.expenseTracker.weeklyTotal}}</div>
      <div class="total-value">$__________</div>
    </div>
  </div>
</body>

</html>
