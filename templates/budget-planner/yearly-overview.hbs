<!-- templates/budget-planner/yearly-overview.hbs -->
<!DOCTYPE html>
<html>

<head>
  <style>
    @page {
      size: A4 landscape;
      margin: 12mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
      font-size: 10px;
    }

    .header {
      text-align: center;
      margin-bottom: 12px;
    }

    .title {
      font-size: 24px;
      color: {{customization.primaryColor}};
      margin: 0;
    }

    .year-grid {
      display: grid;
      grid-template-columns: repeat(6, 1fr);
      gap: 8px;
    }

    .month-box {
      border: 2px solid {{customization.primaryColor}};
      border-radius: 6px;
      padding: 8px;
      background: white;
    }

    .month-name {
      font-size: 11px;
      font-weight: bold;
      color: white;
      background: {{customization.primaryColor}};
      margin: -8px -8px 8px -8px;
      padding: 5px;
      text-align: center;
      border-radius: 4px 4px 0 0;
    }

    .metric {
      display: flex;
      justify-content: space-between;
      margin: 4px 0;
      font-size: 9px;
    }

    .metric-label {
      color: #666;
    }

    .metric-value {
      font-weight: bold;
      min-width: 40px;
      text-align: right;
    }

    .divider {
      border-top: 1px solid #e0e0e0;
      margin: 5px 0;
    }

    .metric.savings .metric-label {
      color: #4caf50;
    }

    .metric.debt .metric-label {
      color: #e91e63;
    }

    .bottom-section {
      margin-top: 15px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 15px;
    }

    .summary-box {
      background: linear-gradient(135deg, {{customization.primaryColor}}10, {{customization.secondaryColor}}10);
      border: 2px solid {{customization.primaryColor}};
      border-radius: 10px;
      padding: 12px;
    }

    .summary-title {
      font-size: 12px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 10px;
      text-align: center;
    }

    .summary-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 8px;
    }

    .summary-item {
      background: white;
      padding: 8px;
      border-radius: 6px;
      text-align: center;
    }

    .summary-label {
      font-size: 8px;
      color: #666;
      margin-bottom: 3px;
    }

    .summary-value {
      font-size: 12px;
      font-weight: bold;
      color: {{customization.primaryColor}};
    }

    .lessons-box {
      background: #fff8e1;
      border: 2px solid #ffc107;
      border-radius: 10px;
      padding: 12px;
    }

    .lessons-title {
      font-size: 12px;
      font-weight: bold;
      color: #f57c00;
      margin-bottom: 10px;
    }

    .lesson-item {
      margin-bottom: 8px;
    }

    .lesson-label {
      font-size: 9px;
      color: #666;
      margin-bottom: 3px;
    }

    .lesson-input {
      border-bottom: 1px dotted #ccc;
      min-height: 14px;
      font-size: 10px;
    }

    .changes-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 6px;
      margin-top: 8px;
    }

    .change-item {
      background: white;
      padding: 6px;
      border-radius: 4px;
      font-size: 9px;
    }

    .change-num {
      color: {{customization.primaryColor}};
      font-weight: bold;
    }
  </style>
</head>

