<!-- templates/budget-planner/how-to-use.hbs -->
<!DOCTYPE html>
<html lang="{{lang}}">

<head>
  <style>
    @page {
      size: A4;
      margin: 12mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
      line-height: 1.3;
    }

    .header {
      text-align: center;
      margin-bottom: 12px;
      border-bottom: 3px solid {{customization.primaryColor}};
      padding-bottom: 8px;
    }

    .title {
      font-size: 24px;
      color: {{customization.primaryColor}};
      margin-bottom: 3px;
    }

    .subtitle {
      font-size: 12px;
      color: #666;
    }

    .steps-grid {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      gap: 8px;
      margin-bottom: 15px;
    }

    .step-card {
      background: #f8f9fa;
      border-radius: 8px;
      padding: 12px 8px;
      text-align: center;
      border-top: 3px solid {{customization.primaryColor}};
    }

    .step-number {
      width: 24px;
      height: 24px;
      background: {{customization.primaryColor}};
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      font-size: 12px;
      margin: 0 auto 8px;
    }

    .step-title {
      font-size: 11px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 5px;
    }

    .step-desc {
      font-size: 10px;
      color: #666;
    }

    .weekly-box {
      background: linear-gradient(135deg, {{customization.primaryColor}}10, {{customization.secondaryColor}}10);
      border-radius: 10px;
      padding: 15px;
      margin-bottom: 15px;
    }

    .weekly-title {
      font-size: 14px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 8px;
    }

    .weekly-desc {
      font-size: 11px;
      color: #666;
      margin-bottom: 10px;
    }

    .weekly-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 8px;
    }

    .weekly-item {
      display: flex;
      align-items: flex-start;
      gap: 8px;
      padding: 8px;
      background: white;
      border-radius: 6px;
    }

    .checkbox {
      width: 14px;
      height: 14px;
      border: 2px solid {{customization.primaryColor}};
      border-radius: 3px;
      flex-shrink: 0;
      margin-top: 1px;
    }

    .weekly-text {
      font-size: 11px;
      color: #444;
    }

    .tip-box {
      background: #fff8e1;
      border-left: 4px solid #ffc107;
      padding: 15px;
      border-radius: 0 10px 10px 0;
    }

    .tip-title {
      font-size: 13px;
      font-weight: bold;
      color: #f57c00;
      margin-bottom: 8px;
    }

    .tip-text {
      font-size: 12px;
      color: #555;
      line-height: 1.6;
    }
  </style>
</head>

<body>
  <div class="header">
    <h1 class="title">{{t.howToUse.title}}</h1>
    <p class="subtitle">{{t.howToUse.subtitle}}</p>
  </div>

  <div class="steps-grid">
    <div class="step-card">
      <div class="step-number">1</div>
      <div class="step-title">{{t.howToUse.step1Title}}</div>
      <div class="step-desc">{{t.howToUse.step1Desc}}</div>
    </div>
    <div class="step-card">
      <div class="step-number">2</div>
      <div class="step-title">{{t.howToUse.step2Title}}</div>
      <div class="step-desc">{{t.howToUse.step2Desc}}</div>
    </div>
    <div class="step-card">
      <div class="step-number">3</div>
      <div class="step-title">{{t.howToUse.step3Title}}</div>
      <div class="step-desc">{{t.howToUse.step3Desc}}</div>
    </div>
    <div class="step-card">
      <div class="step-number">4</div>
      <div class="step-title">{{t.howToUse.step4Title}}</div>
      <div class="step-desc">{{t.howToUse.step4Desc}}</div>
    </div>
    <div class="step-card">
      <div class="step-number">5</div>
      <div class="step-title">{{t.howToUse.step5Title}}</div>
      <div class="step-desc">{{t.howToUse.step5Desc}}</div>
    </div>
  </div>

  <div class="weekly-box">
    <div class="weekly-title">{{t.howToUse.weeklyRoutineTitle}}</div>
    <div class="weekly-desc">{{t.howToUse.weeklyRoutineDesc}}</div>
    <div class="weekly-grid">
      {{#each t.howToUse.weeklyItems}}
      <div class="weekly-item">
        <div class="checkbox"></div>
        <span class="weekly-text">{{this}}</span>
      </div>
      {{/each}}
    </div>
  </div>

  <div class="tip-box">
    <div class="tip-title">{{t.howToUse.tipTitle}}</div>
    <div class="tip-text">{{t.howToUse.tipText}}</div>
  </div>
</body>

</html>
