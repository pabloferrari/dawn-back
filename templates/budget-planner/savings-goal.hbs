<!-- templates/budget-planner/savings-goal.hbs -->
<!DOCTYPE html>
<html lang="{{lang}}">

<head>
  <style>
    @page {
      size: A4;
      margin: 10mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
      line-height: 1.2;
    }

    .header {
      text-align: center;
      margin-bottom: 10px;
      border-bottom: 3px solid {{customization.primaryColor}};
      padding-bottom: 8px;
    }

    .title {
      font-size: 24px;
      color: {{customization.primaryColor}};
      margin: 0;
    }

    .goal-card {
      border: 2px solid {{customization.primaryColor}};
      border-radius: 10px;
      padding: 10px 12px;
      margin-bottom: 10px;
      background: white;
    }

    .goal-header {
      display: grid;
      grid-template-columns: 1fr auto;
      gap: 10px;
      margin-bottom: 8px;
      padding-bottom: 8px;
      border-bottom: 1px dashed #e0e0e0;
    }

    .goal-name-section {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .goal-icon {
      width: 28px;
      height: 28px;
      background: linear-gradient(135deg, {{customization.primaryColor}}, {{customization.secondaryColor}});
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 14px;
    }

    .goal-label {
      font-size: 9px;
      color: #888;
      margin-bottom: 1px;
    }

    .goal-input {
      font-size: 13px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      border-bottom: 2px dotted #ccc;
      min-width: 120px;
      padding: 1px 0;
    }

    .goal-amount-section {
      text-align: right;
    }

    .goal-amount {
      font-size: 18px;
      font-weight: bold;
      color: {{customization.primaryColor}};
    }

    .why-section {
      background: #f8f9fa;
      border-radius: 6px;
      padding: 6px 10px;
      margin-bottom: 8px;
    }

    .why-label {
      font-size: 10px;
      color: {{customization.primaryColor}};
      font-weight: bold;
      margin-bottom: 3px;
    }

    .why-input {
      border-bottom: 1px dotted #ccc;
      min-height: 14px;
      font-size: 10px;
    }

    .progress-section {
      margin: 8px 0;
    }

    .progress-label {
      font-size: 9px;
      color: #666;
      margin-bottom: 4px;
      display: flex;
      justify-content: space-between;
    }

    .progress-bar {
      display: flex;
      height: 20px;
      border-radius: 10px;
      overflow: hidden;
      background: #e8e8e8;
    }

    .progress-segment {
      flex: 1;
      border-right: 2px solid white;
      background: #f0f0f0;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 8px;
      color: #999;
    }

    .progress-segment:last-child {
      border-right: none;
      border-radius: 0 10px 10px 0;
    }

    .progress-segment:first-child {
      border-radius: 10px 0 0 10px;
    }

    .info-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 6px;
      margin-top: 8px;
    }

    .info-item {
      background: #f5f5f5;
      padding: 5px 6px;
      border-radius: 5px;
      text-align: center;
    }

    .info-label {
      font-size: 8px;
      color: #666;
      margin-bottom: 2px;
    }

    .info-value {
      font-size: 11px;
      font-weight: bold;
      color: {{customization.primaryColor}};
    }
  </style>
</head>

<body>
  <div class="header">
    <h1 class="title">{{t.savingsGoal.title}} {{year}}</h1>
  </div>

  {{#times 3}}
  <div class="goal-card">
    <div class="goal-header">
      <div class="goal-name-section">
        <div class="goal-icon">{{this}}</div>
        <div class="goal-name-input">
          <div class="goal-label">{{../t.savingsGoal.goalName}}</div>
          <div class="goal-input">_______________________</div>
        </div>
      </div>
      <div class="goal-amount-section">
        <div class="goal-label">{{../t.savingsGoal.targetAmount}}</div>
        <div class="goal-amount">$__________</div>
      </div>
    </div>

    <div class="why-section">
      <div class="why-label">{{../t.savingsGoal.motivationPrompt}}</div>
      <div class="why-input"></div>
    </div>

    <div class="progress-section">
      <div class="progress-label">
        <span>{{../t.savingsGoal.progress}}</span>
        <span>0% â†’ 100%</span>
      </div>
      <div class="progress-bar">
        <div class="progress-segment">10</div>
        <div class="progress-segment">20</div>
        <div class="progress-segment">30</div>
        <div class="progress-segment">40</div>
        <div class="progress-segment">50</div>
        <div class="progress-segment">60</div>
        <div class="progress-segment">70</div>
        <div class="progress-segment">80</div>
        <div class="progress-segment">90</div>
        <div class="progress-segment">100</div>
      </div>
    </div>

    <div class="info-grid">
      <div class="info-item">
        <div class="info-label">{{../t.savingsGoal.deadline}}</div>
        <div class="info-value">__/__/{{../year}}</div>
      </div>
      <div class="info-item">
        <div class="info-label">{{../t.savingsGoal.monthlyTarget}}</div>
        <div class="info-value">$______</div>
      </div>
      <div class="info-item">
        <div class="info-label">{{../t.savingsGoal.total}}</div>
        <div class="info-value">$______</div>
      </div>
      <div class="info-item">
        <div class="info-label">{{../t.savingsGoal.remaining}}</div>
        <div class="info-value">$______</div>
      </div>
    </div>
  </div>
  {{/times}}
</body>

</html>
