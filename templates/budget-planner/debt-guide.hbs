<!-- templates/budget-planner/debt-guide.hbs -->
<!DOCTYPE html>
<html lang="{{lang}}">

<head>
  <style>
    @page {
      size: A4;
      margin: 15mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
      line-height: 1.5;
    }

    .header {
      text-align: center;
      margin-bottom: 20px;
      border-bottom: 3px solid {{customization.primaryColor}};
      padding-bottom: 12px;
    }

    .title {
      font-size: 26px;
      color: {{customization.primaryColor}};
      margin-bottom: 5px;
    }

    .subtitle {
      font-size: 13px;
      color: #666;
    }

    .methods-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 15px;
      margin-bottom: 20px;
    }

    .method-card {
      border-radius: 12px;
      padding: 18px;
      border: 2px solid;
    }

    .method-card.snowball {
      background: #e3f2fd;
      border-color: #2196f3;
    }

    .method-card.avalanche {
      background: #fce4ec;
      border-color: #e91e63;
    }

    .method-icon {
      font-size: 35px;
      text-align: center;
      margin-bottom: 8px;
    }

    .method-name {
      font-size: 18px;
      font-weight: bold;
      text-align: center;
      margin-bottom: 8px;
    }

    .method-card.snowball .method-name { color: #1976d2; }
    .method-card.avalanche .method-name { color: #c2185b; }

    .method-desc {
      font-size: 12px;
      text-align: center;
      margin-bottom: 12px;
      color: #666;
    }

    .method-how {
      font-size: 12px;
      margin-bottom: 12px;
      padding: 10px;
      background: rgba(255,255,255,0.7);
      border-radius: 8px;
    }

    .method-how-title {
      font-weight: bold;
      margin-bottom: 8px;
    }

    .method-steps {
      margin: 0;
      padding-left: 18px;
      font-size: 11px;
    }

    .method-steps li {
      margin-bottom: 4px;
    }

    .method-best {
      margin-top: 10px;
      padding: 10px;
      background: rgba(255,255,255,0.8);
      border-radius: 8px;
      font-size: 11px;
      text-align: center;
    }

    .choice-section {
      border: 3px solid {{customization.primaryColor}};
      border-radius: 12px;
      padding: 20px;
      text-align: center;
      margin-bottom: 15px;
    }

    .choice-title {
      font-size: 16px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 15px;
    }

    .choice-options {
      display: flex;
      justify-content: center;
      gap: 30px;
      margin-bottom: 15px;
    }

    .choice-option {
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 14px;
    }

    .choice-checkbox {
      width: 22px;
      height: 22px;
      border: 2px solid {{customization.primaryColor}};
      border-radius: 50%;
    }

    .why-row {
      margin-top: 15px;
    }

    .why-label {
      font-size: 12px;
      color: #666;
      margin-bottom: 5px;
    }

    .why-input {
      border-bottom: 2px dotted #ccc;
      min-height: 20px;
    }

    .quote-box {
      background: linear-gradient(135deg, {{customization.primaryColor}}, {{customization.secondaryColor}});
      color: white;
      padding: 18px;
      border-radius: 10px;
      text-align: center;
    }

    .quote-text {
      font-size: 14px;
      font-style: italic;
      margin-bottom: 8px;
    }

    .quote-meaning {
      font-size: 12px;
      opacity: 0.9;
    }
  </style>
</head>

<body>
  <div class="header">
    <h1 class="title">{{t.debtGuide.title}}</h1>
    <p class="subtitle">{{t.debtGuide.subtitle}}</p>
  </div>

  <div class="methods-grid">
    <div class="method-card snowball">
      <div class="method-icon">‚õÑ</div>
      <div class="method-name">{{t.debtGuide.snowballTitle}}</div>
      <div class="method-desc">{{t.debtGuide.snowballDesc}}</div>
      <div class="method-how">
        <div class="method-how-title">{{t.debtGuide.snowballHow}}</div>
        <ol class="method-steps">
          {{#each t.debtGuide.snowballSteps}}
          <li>{{this}}</li>
          {{/each}}
        </ol>
      </div>
      <div class="method-best">{{t.debtGuide.snowballBest}}</div>
    </div>

    <div class="method-card avalanche">
      <div class="method-icon">üèîÔ∏è</div>
      <div class="method-name">{{t.debtGuide.avalancheTitle}}</div>
      <div class="method-desc">{{t.debtGuide.avalancheDesc}}</div>
      <div class="method-how">
        <div class="method-how-title">{{t.debtGuide.avalancheHow}}</div>
        <ol class="method-steps">
          {{#each t.debtGuide.avalancheSteps}}
          <li>{{this}}</li>
          {{/each}}
        </ol>
      </div>
      <div class="method-best">{{t.debtGuide.avalancheBest}}</div>
    </div>
  </div>

  <div class="choice-section">
    <div class="choice-title">{{t.debtGuide.choiceTitle}}</div>
    <div class="choice-options">
      <div class="choice-option">
        <div class="choice-checkbox"></div>
        <span>{{t.debtGuide.choiceSnowball}}</span>
      </div>
      <div class="choice-option">
        <div class="choice-checkbox"></div>
        <span>{{t.debtGuide.choiceAvalanche}}</span>
      </div>
    </div>
    <div class="why-row">
      <div class="why-label">{{t.debtGuide.whyLabel}}</div>
      <div class="why-input"></div>
    </div>
  </div>

  <div class="quote-box">
    <div class="quote-text">{{t.debtGuide.truthTitle}}</div>
    <div class="quote-meaning">{{t.debtGuide.truthText}}</div>
  </div>
</body>

</html>
