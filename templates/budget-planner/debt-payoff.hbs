<!-- templates/budget-planner/debt-payoff.hbs -->
<!DOCTYPE html>
<html>

<head>
  <style>
    @page {
      size: A4;
      margin: 15mm;
    }

    body {
      font-family: {{customization.fontFamily}};
      color: #333;
      line-height: 1.4;
    }

    .header {
      text-align: center;
      margin-bottom: 15px;
      border-bottom: 3px solid {{customization.primaryColor}};
      padding-bottom: 12px;
    }

    .title {
      font-size: 28px;
      color: {{customization.primaryColor}};
      margin: 0;
    }

    .subtitle {
      font-size: 13px;
      color: #666;
      margin-top: 5px;
    }

    .strategy-tip {
      background: #e3f2fd;
      border-left: 4px solid #2196f3;
      padding: 10px 15px;
      margin-bottom: 15px;
      border-radius: 0 8px 8px 0;
      font-size: 11px;
    }

    .strategy-tip strong {
      color: #1976d2;
    }

    .debt-card {
      border: 2px solid #e91e63;
      border-radius: 12px;
      padding: 15px;
      margin-bottom: 15px;
      background: white;
    }

    .debt-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 12px;
      padding-bottom: 10px;
      border-bottom: 1px dashed #e0e0e0;
    }

    .debt-name {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .debt-number {
      width: 30px;
      height: 30px;
      background: #e91e63;
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      font-size: 14px;
    }

    .debt-input {
      font-size: 16px;
      font-weight: bold;
      color: #333;
      border-bottom: 2px dotted #ccc;
      min-width: 180px;
    }

    .debt-total {
      font-size: 22px;
      font-weight: bold;
      color: #e91e63;
    }

    .debt-info-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 10px;
      margin-bottom: 12px;
    }

    .info-item {
      background: #f8f8f8;
      padding: 8px;
      border-radius: 6px;
      text-align: center;
    }

    .info-label {
      font-size: 9px;
      color: #666;
      margin-bottom: 3px;
    }

    .info-value {
      font-size: 13px;
      font-weight: bold;
      color: {{customization.primaryColor}};
    }

    .progress-section {
      margin: 10px 0;
    }

    .progress-bar {
      display: flex;
      height: 22px;
      border-radius: 11px;
      overflow: hidden;
      background: #e8e8e8;
    }

    .progress-segment {
      flex: 1;
      border-right: 2px solid white;
      background: #f0f0f0;
    }

    .progress-segment:last-child {
      border-right: none;
    }

    .progress-labels {
      display: flex;
      justify-content: space-between;
      font-size: 9px;
      color: #888;
      margin-top: 3px;
    }

    .milestones-box {
      background: linear-gradient(135deg, #4caf5015, #8bc34a15);
      border: 2px solid #4caf50;
      border-radius: 12px;
      padding: 15px;
      margin-top: 20px;
    }

    .milestones-title {
      font-size: 14px;
      font-weight: bold;
      color: #2e7d32;
      margin-bottom: 12px;
      text-align: center;
    }

    .milestones-grid {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      gap: 8px;
    }

    .milestone {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 10px 5px;
      background: white;
      border-radius: 8px;
      text-align: center;
    }

    .milestone-checkbox {
      width: 24px;
      height: 24px;
      border: 2px solid #4caf50;
      border-radius: 50%;
      margin-bottom: 5px;
    }

    .milestone-label {
      font-size: 10px;
      color: #555;
      font-weight: 500;
    }

    .milestone-emoji {
      font-size: 16px;
      margin-top: 3px;
    }

    .summary-box {
      margin-top: 15px;
      padding: 15px;
      background: #f5f5f5;
      border-radius: 10px;
    }

    .summary-title {
      font-size: 14px;
      font-weight: bold;
      color: {{customization.primaryColor}};
      margin-bottom: 12px;
      text-align: center;
    }

    .summary-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 15px;
    }

    .summary-item {
      text-align: center;
      padding: 10px;
      background: white;
      border-radius: 8px;
    }

    .summary-label {
      font-size: 11px;
      color: #666;
      margin-bottom: 5px;
    }

    .summary-value {
      font-size: 20px;
      font-weight: bold;
      color: {{customization.primaryColor}};
    }

    .quote-footer {
      margin-top: 15px;
      text-align: center;
      padding: 12px;
      background: linear-gradient(135deg, {{customization.primaryColor}}, {{customization.secondaryColor}});
      color: white;
      border-radius: 8px;
      font-style: italic;
      font-size: 13px;
    }
  </style>
</head>

<body>
