      flex-direction: column;
      gap: 6px;
    }

    .check-item {
      background: white;
      padding: 6px 8px;
      border-radius: 6px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .check-item .icon {
      font-size: 14px;
      flex-shrink: 0;
    }

    .check-item .text {
